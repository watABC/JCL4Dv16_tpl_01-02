//[--PREFIX]01_DeleteSelectedItems//[--PREFIX]01_DeleteNSelected//method_generator v20141003 [--DATE]//[--TABLE] リストボックスの選択行を複数削除C_LONGINT($0;$selCnt)C_LONGINT($i)C_LONGINT($[--PREFIX]_id)ARRAY LONGINT($ary[--PREFIX]_ID;0)READ WRITE([[--TABLE]])// 選択されている行のIDを配列に取得$selCnt:=Jiro_lst_SelectedValues (->v[--PREFIX]01_lst[--PREFIX];->v[--PREFIX]01_lst[--PREFIX]_ID;->$ary[--PREFIX]_ID)For ($i;1;$selCnt)// レコードを取得$[--PREFIX]_id:=$ary[--PREFIX]_ID{$i}QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)FIRST RECORD([[--TABLE]])// 削除フラグをオン[[--TABLE]][--PREFIX]_DEL_FLAG:=1// レコードを保存SAVE RECORD([[--TABLE]])End for UNLOAD RECORD([[--TABLE]])READ ONLY([[--TABLE]])$0:=$selCnt