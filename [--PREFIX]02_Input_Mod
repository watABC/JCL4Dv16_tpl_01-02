//[--PREFIX]02_Input_Mod//method_generator [--DATE]//[--TABLE] レコード編集フォームC_LONGINT($1;$[--PREFIX]_id)$[--PREFIX]_id:=$1C_LONGINT($0;$display_ok)//システム変数OKを保持//モードを渡す、フォームの［削除］ボタンを非表示にするためだったり．．[--PREFIX]02_DefInit [--PREFIX]02_varMode_Set ("mod")READ WRITE([[--TABLE]])QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)[--PREFIX]02_LoadValues $display_ok:=[--PREFIX]02_Display ($[--PREFIX]_id)//OK変数の値を保持If ($display_ok=1)//更新日をＤＢに保存READ WRITE([[--TABLE]])QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)[--PREFIX]02_SaveValues [[--TABLE]][--PREFIX]_UPDATE_DATEMARK:=Jiro_str_Datemark (Current date;Current time)SAVE RECORD([[--TABLE]])End if UNLOAD RECORD([[--TABLE]])READ ONLY([[--TABLE]])$0:=$display_ok