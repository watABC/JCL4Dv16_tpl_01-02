//[--PREFIX]_Duplicate//method_generator [--DATE]//[--TABLE] レコード複製//複製C_LONGINT($1;$[--PREFIX]_id)$[--PREFIX]_id:=$1C_LONGINT($0;$new_[--PREFIX]_id)READ WRITE([[--TABLE]])QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_DEL_FLAG=0;*)QUERY([[--TABLE]];&;[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)FIRST RECORD([[--TABLE]])DUPLICATE RECORD([[--TABLE]])$new_[--PREFIX]_id:=Jiro_num_SerialNumber ("[--PREFIX]_ID";"[--TABLE]")[[--TABLE]][--PREFIX]_ID:=$new_[--PREFIX]_id[[--TABLE]][--PREFIX]_TITLE:=[[--TABLE]][--PREFIX]_TITLE+"のコピー"[[--TABLE]][--PREFIX]_UPDATE_DATEMARK:=Jiro_str_Datemark (Current date;Current time)SAVE RECORD([[--TABLE]])$0:=$new_[--PREFIX]_id