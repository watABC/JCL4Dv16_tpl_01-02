//[--PREFIX]01_btnMod//method_generator [--DATE]//[--TABLE] リストボックスの選択行を編集 入力フォームを編集モードで表示C_LONGINT($[--PREFIX]_id)$[--PREFIX]_id:=0C_LONGINT($selCnt)C_LONGINT($dlg_ok)//システム変数OKを保持$selCnt:=Jiro_lst_SelectedCount (->v[--PREFIX]01_lst[--PREFIX])If ($selCnt>=1)//リストボックスに選択行があれば$[--PREFIX]_id:=Jiro_lst_Selected_Long (->v[--PREFIX]01_lst[--PREFIX];->v[--PREFIX]01_lst[--PREFIX]_ID)$dlg_ok:=[--PREFIX]02_Input_Mod ($[--PREFIX]_id)//入力フォームを開くIf ($dlg_ok=1)[--PREFIX]01_lst[--PREFIX]_Make //テーブルからリロード//変更行を選択状態にするJiro_lst_SetSelect_byLong (->v[--PREFIX]01_lst[--PREFIX];->v[--PREFIX]01_lst[--PREFIX]_ID;$[--PREFIX]_id)[--PREFIX]01_SetControlsValues End if End if 