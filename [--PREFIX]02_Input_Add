//[--PREFIX]02_Input_Add//method_generator [--DATE]//[--TABLE] レコード追加フォームC_POINTER($1)//ポインタ引数にIDを返すC_LONGINT($[--PREFIX]_id)C_LONGINT($dlg_ok)//システム変数OKを保持[--PREFIX]02_DefInit [--PREFIX]02_varMode_Set ("add")//レコードを作成して、初期値代入READ WRITE([[--TABLE]])$[--PREFIX]_id:=[--PREFIX]_Add_byInitValues //画面表示[--PREFIX]02_LoadValues $dlg_ok:=[--PREFIX]02_Display ($[--PREFIX]_id)If ($dlg_ok#1)//addモードの場合は、追加したレコードを完全に削除するREAD WRITE([[--TABLE]])QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)[[--TABLE]][--PREFIX]_DEL_FLAG:=2SAVE RECORD([[--TABLE]])else//更新日をＤＢに保存READ WRITE([[--TABLE]])QUERY([[--TABLE]];[[--TABLE]][--PREFIX]_ID=$[--PREFIX]_id)[--PREFIX]02_SaveValues [[--TABLE]][--PREFIX]_UPDATE_DATEMARK:=JCL_str_Datemark (Current date;Current time)SAVE RECORD([[--TABLE]])End if UNLOAD RECORD([[--TABLE]])READ ONLY([[--TABLE]])$1->:=$[--PREFIX]_id//IDを返す$0:=$dlg_ok